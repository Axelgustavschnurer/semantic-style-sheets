{
  "scripts": {
    "sass:watch": "sass --watch ./src/main.scss:./dev/output/main.css && node ./dev/index.js",
    "node:watch": "node --watch-path=./dev ./dev/index.js",
    "dev": "run-p node:watch sass:watch",
    "build": "sass ./src/main.scss:./dev/output/main.css && sass ./src/main.scss:./dev/output/main.min.css --style compressed"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.70.0"
  }
}
